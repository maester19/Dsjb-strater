{% extends 'base/base.html.twig' %}

{% block title %}User{% endblock %}
{% block stylesheets %}
<style>
    body{
        background: url("{{ asset('img/admin-bg2.jpeg') }}");
        background-repeat: no-repeat;
        background-size: 100%;
    }
    .block, table{
        background: rgba(26, 41, 33, 0.7);
        padding:10px;
        color:white;
    }
    .block td, th{
        color:white;
    }
</style>
{% endblock %}

{% block body %}
    <div class="block p-4">
        <h1>User: {{ user.nom }} </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in user.roles %} 
                        {{ role }} /
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin.user.index') }}" class="btn btn-secondary"> << back to list</a>

    <a href="{{ path('admin.user.edit', {'id': user.id}) }}" class="btn btn-secondary">edit</a>

    {{ include('admin/user/_delete_form.html.twig') }}
    </div>
{% endblock %}
